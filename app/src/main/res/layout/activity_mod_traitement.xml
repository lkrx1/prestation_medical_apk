<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:layout_centerVertical="true"
    android:layout_gravity="center"
    android:background="@drawable/rounded_backgound"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2196F3">

        <TextView
            android:id="@+id/title_traitement_mod"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="2dp"
            android:text="Modification du traitement"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:gravity="center|center_horizontal|left"
            android:paddingLeft="10dp"
            android:text="x"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_et_nom_mdc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numero du medecin" />

            <Spinner
                android:id="@+id/sp_mdc"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:clipToPadding="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_et_nom_pat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numero du patient" />

            <Spinner
                android:id="@+id/sp_pat"
                android:layout_width="match_parent"
                android:layout_height="58dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_et_nbjour_traitement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de jour" />

            <EditText
                android:id="@+id/et_nbjour_traitement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_save_traitement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:text="Enregistrer"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:backgroundTint="#2196F3" />

</LinearLayout>